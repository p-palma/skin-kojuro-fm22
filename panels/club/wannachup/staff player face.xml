<panel>
  <layout class="arrange_vertical_attachment" layout="65,1,50" gap="0"/>
  <layout class="stick_to_sides_attachment" alignmnet="horizontal" inset="0" apply_to_children="true"/>
  <container>
    <widget class="picture" id="picM" scale_picture="true" image_alignment="centre_x,bottom" keep_aspect_ratio="true" dont_set_hint="true">
      <layout class="stick_to_sides_attachment" alignment="all" inset="0,0,0,0"/>
      <attachment class="test_setting_attachment" get_setting="show_portraits" default_value="true" set_property="hidn">
        <list id="value">
          <boolean value="false"/>
        </list>
      </attachment>
      <record id="object_property">
        <list id="get_properties">
          <record>
            <integer id="get_property" value="fcgn"/>
            <!--Facegen data request-->
          </record>
          <record>
            <integer id="get_property" value="Pfke"/>
            <!--Fake name request-->
          </record>
          <record>
            <integer id="get_property" value="prpc"/>
            <integer id="set_property" value="valu"/>
          </record>
          <record>
            <integer id="get_property" value="text"/>
            <string id="set_property" value="hint"/>
          </record>
        </list>
      </record>
    </widget>
    <widget height="16" width="16" class="person_button" id="pbtn" alignment="centre,can_scale" icon_alignment="left,top" secondary_icon_colour="text">
      <layout class="stick_to_sides_attachment" alignment="left" inset="0"/>
      <layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
      <record id="object_property" get_property="PnmP" set_property="valu"/>
    </widget>
  </container>
  <widget class="picture" file="dividers/standard/horizontal/line" red_replacement="white"/>
  <container>
    <layout class="stick_to_sides_attachment" alignmnet="all" inset="0" apply_to_children="true"/>
    <container id="info">
      <layout class="arrange_vertical_attachment" layout="15,1,4,-1" offset="0" gap="0"/>
      <layout class="stick_to_sides_attachment" alignmnet="horizontal" inset="0" apply_to_children="true"/>
      <layout class="stick_to_sides_attachment" alignmnet="centre" inset="0" apply_to_children="true"/>
      <widget class="person_button" id="perM" size="7" font="title" colour="text" alignment="centre_x,centre_y,can_scale">
        <record id="object_property">
          <integer id="get_property" value="objt"/>
          <integer id="set_property" value="valu"/>
        </record>
      </widget>
      <widget class="picture" file="dividers/standard/horizontal/line" red_replacement="white"/>
      <container/>
      <widget class="object_portrait_picture" image_alignment="centre_x,bottom" scale_picture="true">
        <record id="object_property" dont_set_hint="true" get_property="PNat" set_property="objt"/>
      </widget>
    </container>
    <widget class="label" id="nofo" alignment="centre,top,can_scale">
      <translation id="text" translation_id="320493" type="use" value="None currently[COMMENT: text indicating that there is no person to view here currently (e.g. a manager, captain, vice captain etc.)]"/>
    </widget>
  </container>
</panel>

<!-- image properties -->
<properties>
  <!-- image borders -->
  <!-- these determine how many pixels any content is inset from each side of the image -->
  <!-- (for example, in the case of a button, the content would be the text label) -->
  <record id="image_borders" left="4" right="4" top="4" bottom="4"/>
  <!-- title borders -->
  <!-- these determine how many pixels any content is inset from each side of the image when there is a title included -->
  <!-- (for example, in the case of a button, the content would be the text label) -->
  <record id="title_borders" left="4" right="4" top="30" bottom="4"/>
  <!-- image slices determine the points at which the image will be sliced to enable scaling -->
  <!-- the image will only slice in the directions slicing values are provided for-->
  <record id="image_slices" left="12" right="12" top="12" bottom="12"/>
  <colour id="red_replacement" name="box_background"/>
  <colour id="green_replacement" name="box_shadow"/>
  <colour id="blue_replacement" name="box_border"/>
  <!-- title insets -->
  <!-- these determine how many pixels the title is inset from the top/bottom/left/right of the box -->
  <integer id="text_top_inset" value="8"/>
  <integer id="text_bottom_inset" value="0"/>
  <integer id="text_left_inset" value="8"/>
  <integer id="text_right_inset" value="0"/>
  <!-- title properties -->
  <record id="font_spec">
    <flags id="font" value="title"/>
    <colour id="colr" name="title"/>
    <flags id="size" value="normal"/>
  </record>
</properties>
